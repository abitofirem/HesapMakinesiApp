<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_margin="5dp"
    android:background="#DC8DEA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom"
        >


        <TextView
            android:id="@+id/islemler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="end"
            android:inputType="text"
            android:minHeight="48dp"
            android:text=""
            android:textSize="25sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/sonuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:gravity="end"
            android:text=""
            android:textSize="50sp"
            android:hint="0"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">


            <Button
                android:id="@+id/c"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="AC"
                android:onClick="click"
                android:background="@drawable/buton_sekil"
                />
            <Button
                android:id="@+id/yuzde"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="%"
                android:textStyle="bold"
                android:textSize="20dp"
                android:onClick="click"
                android:background="@drawable/buton_sekil"/>

            <Button
                android:id="@+id/esit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/buton_sekil"
                android:onClick="click"
                android:text="="
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sil"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@android:drawable/ic_input_delete"
                android:backgroundTint="#822293"
                android:onClick="click"
                android:textColor="#00A26AAC"
                android:text="←"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/yedi"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="7"
                android:onClick="click"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/buton_sekil"
                />
            <Button
                android:id="@+id/sekiz"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="8"
                android:textStyle="bold"
                android:textSize="20dp"
                android:onClick="click"
                android:background="@drawable/buton_sekil"/>

            <Button
                android:id="@+id/dokuz"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="9"
                android:onClick="click"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/buton_sekil"/>

            <Button
                android:id="@+id/carp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="x"
                android:textStyle="bold"
                android:textSize="20dp"
                android:onClick="click"
                android:background="@drawable/buton_sekil"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">


            <Button
                android:id="@+id/dort"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="4"
                android:onClick="click"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/buton_sekil"

                />
            <Button
                android:id="@+id/bes"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="5"
                android:onClick="click"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/buton_sekil"/>

            <Button
                android:id="@+id/alti"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="6"
                android:onClick="click"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/buton_sekil"/>

            <Button
                android:id="@+id/cikar"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="-"
                android:onClick="click"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/buton_sekil"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/bir"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="1"
                android:onClick="click"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/buton_sekil"

                />
            <Button
                android:id="@+id/iki"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="2"
                android:onClick="click"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/buton_sekil"/>

            <Button
                android:id="@+id/uc"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="3"
                android:onClick="click"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/buton_sekil"/>

            <Button
                android:id="@+id/topla"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="+"
                android:onClick="click"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/buton_sekil"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">


            <Button
                android:id="@+id/sifir"
                android:layout_width="107dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/buton_sekil"
                android:onClick="click"
                android:text="0"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/virgul"
                android:layout_width="4dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/buton_sekil"
                android:onClick="click"
                android:text="."
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bol"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="÷"
                android:onClick="click"
                android:textStyle="bold"
                android:textSize="20dp"
                android:background="@drawable/buton_sekil"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
